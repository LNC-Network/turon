{
  "name": "turon",
  "version": "0.0.3",
  "description": "Fast CLI to scaffold and configure Express.js backend projects.",
  "homepage": "https://github.com/LNC-Network/turon#readme",
  "bugs": {
    "url": "https://github.com/LNC-Network/turon/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/cli.js",
  "types": "./dist/cli.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LNC-Network/turon.git"
  },
  "license": "MIT",
  "author": "Jit Debnath",
  "type": "module",
  "bin": {
    "turon": "./dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "keywords": [
    "express",
    "cli",
    "backend",
    "scaffold",
    "generator",
    "typescript"
  ],
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsc && node scripts/copy-templates.mjs",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepare": "husky install",
    "release": "semantic-release"
  },
  "preferGlobal": true,
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.0",
    "@semantic-release/npm": "^13.1.1",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.9.1",
    "@types/prompts": "^2.4.9",
    "eslint": "^9.38.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "semantic-release": "^25.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "chalk": "^5.6.2",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.2",
    "prompts": "^2.4.2"
  }
}
